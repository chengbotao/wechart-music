/* components/card/card.wxss */
.card-container {
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.card-img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.card-count {
  font-size: 24rpx;
  color: #ffffff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 4rpx;
  right: 10rpx;
  padding-left: 26rpx;
}

.card-name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2rpx;
  /* 超出两行显示省略号 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}